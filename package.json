{
	"name": "my-site",
	"version": "1.0.0",
	"scripts": {
		"build:scss": "sass assets/styles/main.scss _site/assets/styles/compiled/main.css",
		"build:11ty": "eleventy",
		"build": "yarn build:scss && yarn build:11ty",
		"watch:scss": "sass --watch assets/styles/main.scss:_site/assets/styles/compiled/main.css",
  		"start": "concurrently \"yarn watch:scss\" \"eleventy --serve\""
	},
	"devDependencies": {
		"@11ty/eleventy": "^3.1.2",
		"concurrently": "^9.2.0",
		"sass": "^1.65.0"
	}
}
